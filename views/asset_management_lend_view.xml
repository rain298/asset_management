         <record model="ir.ui.view" id="all_asset_management_tree_view">
            <field name="name">all_equipment.tree</field>
            <field name="model">asset_management.equipment_info</field>
            <field name="arch" type="xml" >
                <tree>
                    <field name="sn" string = "序列号"/>
